---
import MySQLCard from "./skills/mySQLCard.astro";
import NextCard from "./skills/nextCard.astro";
import ReactCard from "./skills/reactCard.astro";
import TailwindCard from "./skills/tailwindCard.astro";
import TRPCCard from "./skills/trpcCard.astro";
import TypescriptCard from "./skills/typescriptCard.astro";
---

<div class="w-full min-h-screen h-full relative">
  <div class="flex flex-col items-center h-full">
    <h1
      id="skills-section"
      class="text-3xl font-light py-24 text-zm-200 tracking-widest"
    >
      SKILLS
    </h1>
    <div
      class="flex flex-col md:flex-col h-full w-full gap-8 md:gap-6 items-center justify-center"
    >
    <div class="flex flex-grow flex-shrink basis-0 h-full  justify-center items-center flex-col md:flex-row gap-8 md:gap-4 p-2 md:p-0">
        <TypescriptCard />
        <ReactCard />
        <NextCard />
      </div>
      <div class="flex lex-grow flex-shrink basis-0 justify-center h-full items-center flex-col md:flex-row gap-8 md:gap-4 p-2 md:p-0">
        <TRPCCard />
        <TailwindCard />
        <MySQLCard />
      </div>
    </div>
  </div>
</div>
